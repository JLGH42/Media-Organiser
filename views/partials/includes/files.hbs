    <button type="button" class="btn btn-primary newMediaButton" data-toggle="modal" data-target="#addNewMedia">
        NEW MEDIA
    </button>

    <!-- Modal -->
    <div class="modal fade" id="addNewMedia" tabindex="-1" role="dialog" aria-labelledby="addNewMediaTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newMediaModalTitle">Add a New Media</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="new-media-form" method="POST" action='/upload' enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Media-name" class="col-form-label media-label"><strong>Create a Name for your Media:</strong></label>
                            <input type="text" class="form-control" id="Media-name" name="mediaUploadComments">
                        </div>
                        <div class="form-group media">
                            <label for="message-text" class="col-form-label"></label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input media-file-upload" id="inputGroupFile01" name="mediaFile">
                                <label class="custom-file-label media-choose-file" for="inputGroupFile01">Choose file</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
